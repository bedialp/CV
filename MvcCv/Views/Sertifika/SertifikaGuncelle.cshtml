@model MvcCv.Models.Entity.TblSertifikalarim
@{
    ViewBag.Title = "SertifikaGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h3 style="text-align: center; font-weight: bold;">Sertifika Guncelleme Sayfasi</h3>
<br />

<form method="post">

    @Html.Label("Kurs Yeri")
    @Html.TextBoxFor(x => x.Kurs, new { @class = "form-control" })
    <br />
    @Html.Label("Kurs Detay")
    @Html.TextBoxFor(x => x.KursDetay, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    @Html.Label("Sertifika URL")
    @Html.TextBoxFor(x => x.SertifikaURL, new { @class = "form-control" })
    <br />
    @Html.Label("Aciklama")
    @Html.TextAreaFor(x => x.Aciklama, 5, 1, new { @class = "form-control" })
    <br />

    <button class="btn btn-outline-success"><i class="fas fa-save"></i> Guncelle</button>

</form>